{
  "name": "tracespace",
  "private": true,
  "workspaces": [
    "apps/*",
    "config",
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env INTEGRATION=1 nyc mocha",
    "test:watch": "mocha --watch --reporter dot",
    "coverage": "nyc report --reporter=lcov",
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "serve": "lerna run serve --parallel",
    "build:all": "yarn build && yarn example && yarn docs",
    "lint": "eslint \".*.js\" \"**/*.@(js|ts|tsx)\"",
    "format": "prettier --ignore-path .eslintignore --write \".*.@(js|yml)\" \"**/*.@(js|ts|tsx|json|md|yml)\"",
    "check": "tsc",
    "docs": "lerna run docs",
    "example": "lerna run example",
    "prebump": "yarn test",
    "bump": "lerna version",
    "precoverage:upload": "yarn coverage",
    "coverage:upload": "codecov",
    "publish:npm": "lerna publish from-git --yes --npm-tag $NPM_TAG",
    "publish:s3": "node ./scripts/publish-to-s3 apps/www/dist: apps/view/dist:view"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6.10.3"
  },
  "nyc": {
    "all": true,
    "include": [
      "apps/**",
      "packages/**"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/example/**",
      "**/scripts/**",
      "**/dist/**",
      "**/integration/**",
      "**/test.js",
      "**/test/**",
      "**/__tests__/**",
      "**/*.config.js",
      "config/**",
      "packages/fixtures/**"
    ],
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.2",
    "@types/enzyme": "^3.10.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^11.13.8",
    "@types/react": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "aws-sdk": "^2.503.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.5.0",
    "concat-stream": "^2.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.1.0",
    "cz-conventional-changelog": "^3.0.2",
    "debug": "^4.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.17.1",
    "file-loader": "^4.1.0",
    "filemanager-webpack-plugin": "^2.0.5",
    "globby": "^10.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "mime": "^2.4.4",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "null-loader": "^3.0.0",
    "nyc": "^14.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "portfinder": "^1.0.21",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.1",
    "pump": "^3.0.0",
    "react-hot-loader": "^4.12.10",
    "run-parallel": "^1.1.9",
    "run-waterfall": "^1.1.6",
    "semver": "^6.3.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "snap-shot-it": "^7.8.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.4.1",
    "testdouble": "^3.12.3",
    "to-readable-stream": "^2.1.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1",
    "worker-loader": "^2.0.0"
  }
}
